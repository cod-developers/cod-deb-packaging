PROJECT   = $(notdir $(shell pwd))
CHANGELOG = debian/changelog

VERSION = $(shell head -n 1 ${CHANGELOG} | perl -lne 'print $$1 if /\((.*?)-\d\)/')

PKGNAME = ${PROJECT}-${VERSION}

all: ${PKGNAME}

source: ${CHANGELOG}
	./fetch-source

${PKGNAME}: source
	mv source $@
	rsync -av --exclude .svn debian ${PKGNAME}
